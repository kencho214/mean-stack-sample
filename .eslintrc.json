{
  "root": true,
  "env": {
    "es6": true,
    "node": true,
    "mocha": true,
    "browser": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "globals": {
    "angular": true
  },
  "plugins": [
    "promise",
    "angular"
  ],
  "parserOptions": {
    "sourceType": "script"
  },
  "rules": {
    "no-unused-vars": "off"
  }
}